model ReviewCategory {
    id                                      String                  @id  @default(cuid())
    review                                  Review                  @relation(fields: [reviewId], references: [id])
    reviewId                                String                  @unique
    categoryName                            String
    score                                   Int

    @@index([reviewId], map: "idx_reviewcategory_reviewId")
    @@unique([reviewId, categoryName])
}